<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shh.ipctest">

    <permission
        android:name="com.shh.ipctest.permission.ACCESS_BOOK_SERVICE"
        android:protectionLevel="normal" />

    <uses-permission android:name="com.shh.ipctest.permission.ACCESS_BOOK_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AIDLActivity" />
        <activity android:name=".MessengerActivity" />

        <service
            android:name=".BookManagerService"
            android:process=":aidl_remote">
            <intent-filter>
                <action android:name="android.intent.action.BookManagerService" />
            </intent-filter>
        </service>

        <service
            android:name=".MessengerService"
            android:process=":messenger_remote">
            <intent-filter>
                <action android:name="android.intent.action.MessengerService" />
            </intent-filter>
        </service>
    </application>

</manifest>